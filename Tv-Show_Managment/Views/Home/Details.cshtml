@{
}

@model TVShow

@section nav {
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">TV Shows Website</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a></li>
                </ul>
                <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-dark mt-auto">
                    Logout
                </a>
            </div>
        </div>
    </nav>
}
<h2 class="d-flex justify-content-center">@Model.Title</h2>
<div class="d-flex justify-content-center">
    <iframe width="574" height="323" src="@Model.URL" title="@Model.Title" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>
<div class="d-flex justify-content-center small text-warning mb-2">
    Rate: &nbsp;
    @for (int i = 0; i < Model.Rating; i++)
    {
        <div class="bi-star-fill"></div>
    }
</div>
<div class="d-flex justify-content-center">
    Languages: &nbsp;
    @foreach (var lang in Model.Languages)
    {
        <div>@lang.Name &nbsp;</div>
    }
</div>
<h5 class="d-flex justify-content-center">Release Date: @Model.RealeseDate</h5>
<div class="d-flex justify-content-center">
    URL: &nbsp;
    <a href="@Model.URL">@Model.URL</a>
</div>
